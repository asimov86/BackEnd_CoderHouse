<div> Bienvenido, listado de productos con HDBS. </div>
<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

    {{#if listExists}}
    <div>
        <table>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Image</th>
            </tr>
            {{#each product}}
            <tr>
                <td>{{this.title}}</td>
                <td>${{this.price}}</td>
                <td><img width="150" src={{this.thumbnail}}></td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
    <h3>No hay productos</h3>
    {{/if}}
    <br>