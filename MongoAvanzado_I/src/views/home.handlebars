{{#if products.length}}
<h2>Men√∫</h2>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
        {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td><img width="100" src={{this.thumbnail}} alt="not found"></td>
        </tr>
        {{/each}}
    </table>
</div>
<div>
        {{#if hasPrevPage}}
        <a href="/api/products?page={{prevPage}}&limit={{limitValue}}"><button>Anterior</button></a>
        {{/if}}
        {{#if hasNextPage}}
        <a href="/api/products?page={{nextPage}}&limit={{limitValue}}"><button>Siguiente</button></a>
        {{/if}}
        
</div>

{{else}}
<h3>No hay productos</h3>
{{/if}}







