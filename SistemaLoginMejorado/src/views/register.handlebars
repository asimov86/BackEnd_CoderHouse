<div class="container bg mt-5 mb-5 overflow-hidden">
    <div class="row mt-5  align-items-center ">
        <div class="col-12">
            <h4>Formulario de registro</h4>
        </div>
    </div>
    <div class="row mt-5  align-items-center ">
        <div class="col-3">
        1 of 3
        </div>
        <div class="col-6 ">
        <form id="registerForm" class="row g-3 needs-validation bg-light rounded-2 px-4 border border-secondary-subtle">
            <div class="col-12 position-relative">
                <label for="validationTooltip01" class="form-label">First name</label>
                <input type="text" class="form-control" id="validationTooltip01" value="Mark" name="first_name" required>
                <div class="valid-tooltip">
                Looks good!
                </div>
            </div>
            <div class="col-12 position-relative">
                <label for="validationTooltip02" class="form-label">Last name</label>
                <input type="text" class="form-control" id="validationTooltip02" value="Otto" name="last_name" required>
                <div class="valid-tooltip">
                Looks good!
                </div>
            </div>
            <div class="col-12 position-relative">
                <label for="exampleFormControlInput1" class="form-label">Email address</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" name="email" required>
                <div class="invalid-tooltip">
                Please select a valid state.
                </div>
            </div>
            <div class="col-12 position-relative">
                <label for="validationTooltip05" class="form-label">Age</label>
                <input type="number" class="form-control" id="validationTooltip05" name="age" required>
                <div class="invalid-tooltip">
                Please provide a valid age.
                </div>
            </div>
            <div class="col-12 position-relative">
                <label for="validationTooltip02" class="form-label">Password</label>
                <input type="password" class="form-control" id="validationTooltip02" value="@1234Pad" name="password" required>
                <div class="valid-tooltip">
                Looks good!
                </div>
            </div>
            <div class="d-grid gap-2 col-6 mx-auto mb-3 position-relative">
                <input class="btn btn-primary form-control" type="submit" value="Registrate">
                <input class="btn btn-outline-primary form-control" onclick="goToLogin()" value="Inicia sesión" />
            </div>
        </form>
        </div>
        <div class="col-3">
        3 of 3
        </div>
    </div>
    <div class="row mt-5 align-items-center ">
        <div class="col-12">
            Col 12
        </div>
    </div>
</div>


